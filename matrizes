#include <iostream>
using namespace std;
int main() {

	int matriz[3][4]; // Declaração de uma matriz 3x4 (3 linhas e 4 colunas)
	int l, c;

	/*matriz[0][0] = 1;
	matriz[0][1] = 2;
	matriz[0][2] = 3;
	matriz[0][3] = 4;
	matriz[1][0] = 5;
	matriz[1][1] = 6;
	matriz[1][2] = 7;
	matriz[1][3] = 8;
	matriz[2][0] = 9;
	matriz[2][1] = 10;
	matriz[2][2] = 11;
	matriz[2][3] = 12;  // inicializando a matriz com valores

	for (l = 0; l < 3; l++) { // Percorre as linhas e o for serve para fazer a matriz ser percorrida
		for (c = 0; c < 4; c++) { // Percorre as colunas
			cout << matriz[l][c] << " "; // Imprime o valor da célula atual
			*/

	for (l = 0; l < 3; l++) {
		for (c = 0; c < 4; c++) {
			matriz[l][c] = l; // Forma automatica de fazer a matriz ser preenchida com valores, tbm posso adicionar eu mesmo com cin >> matriz[l][c];
		}
	}
		for (l = 0; l < 3; l++){ 
		for(c = 0; c < 4; c++) {
			cout << matriz[l][c] << " ";
		}
		cout << "\n";
		}

	return 0;
}
